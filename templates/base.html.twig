{% trans_default_domain 'messages' %}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="description" content="Slack to Wallabag" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <title>{% block title %}Slack to Wallabag{% endblock %}</title>
        {% block stylesheets %}
          <link rel="stylesheet" href="./css/main.css" />
        {% endblock %}
    </head>
    <body>
        {% block body %}
          <div class="content-wrapper">
            <div class="content">
              {% block header %}
                <h1>
                  <a href="{{ app_home_slack_link }}" class="logo slack">Slack</a>
                  <span class="arrow">⇒</span>
                  <a href="{{ app_home_wallabag_link }}" class="logo wallabag">Wallabag</a>
                </h1>
              {% endblock %}
              <div class="grid-container">
                {% block content %}{% endblock %}
              </div>
              {% block footer %}
                <footer>
                  {{ 'Made with'|trans }} <span class="heart">♥</span> {{ 'near Paris by'|trans }}
                  <a href="https://twitter.com/clem">Clément Delmas</a>
                  <span class="mobile-separator">|</span>
                  <a href="https://github.com/clem/slack-to-wallabag">
                    {{ 'Project available on Github'|trans }}
                  </a>
                </footer>
              {% endblock %}
            </div>
          </div>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
